---
export interface Props {
    class?: Classname;

    title: string;

    /**
     * @description Width of the title column in the table.
     * @default "1"
     */
    titleW?: number;

    /**
     * @description Width of the content column in the table.
     */
    contentW?: number;

    slick?: boolean;
}

const { class: classname, title, titleW, contentW, slick } = Astro.props;
---

<w class:list={["detail-table", "vertical", classname]}>
    <w><hr /></w>
    <w
        class:list={[
            "detail-table-table",
            slick ? "space-table-top-slick" : "space-table-top",
            "just",
        ]}
    >
        <v class={`w${titleW}`}>
            <p class:list={[slick ? "text-slick" : undefined]}>{title}</p>
        </v>
        <v class={`w${contentW}`}>
            <slot />
        </v>
    </w>
</w>
