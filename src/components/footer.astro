---
import { HomeData } from '##/constants/home-data'
import DetailTable from './detail-table.astro'

interface Props {
    class?: Classname
}

const { class: classname } = Astro.props
---

<footer class="footer" class:list={[classname]}>
    <h class="footer-head" data-parallax-speed="0.95">
        <v class="w5"
            ><span class="secondary-text footer-head-title text-slick"
                >MERT<dim>&nbsp;\\</dim></span
            ></v
        >
        <v class="w1"></v>
        <v class="w6"
            ><span class="secondary-text footer-head-title text-slick"
                >HOWION</span
            ></v
        >
    </h>
    <h class="footer-body" data-parallax-speed="0.85">
        <v class="wmax5 wmax">
            <DetailTable title="Website" titleW={1} contentW={2} slick={true}>
                <div class="text-stack-slick">
                    <a
                        class="home-text text-slick home-link"
                        href={Astro.site}
                        title="Homepage"
                    >
                        * Homepage
                    </a>
                    <a
                        class="home-text text-slick home-link"
                        href={`${Astro.site}entries/`}
                        title="Blog"
                    >
                        * Blog
                    </a>
                    <a
                        class="home-text text-slick home-link"
                        href="https://github.com/howion/howion.com-v2"
                        target="_blank"
                        rel="noopener noreferrer"
                        title="Source"
                    >
                        * Source
                    </a>
                    <a
                        class="home-text text-slick home-link"
                        href={`${Astro.site}sitemap-index.xml`}
                        target="_blank"
                        rel="noopener noreferrer"
                        title="Sitemap"
                    >
                        * Sitemap.xml
                    </a>
                    <p class="home-text text-slick"></p>
                    <p class="home-text text-slick">
                        <dim>* Konami Cheat Code</dim>
                    </p>
                </div>
            </DetailTable>
        </v>
        <v class="wmax1 wauto"></v>
        <v class="wmax6 wmax">
            <DetailTable title="Contact" titleW={1} contentW={3} slick={true}>
                <div class="text-stack-slick">
                    <p class="home-text text-slick">
                        {HomeData.contactMails[0]}
                    </p>
                    <p class="home-text text-slick">{HomeData.contactPhone}</p>
                    <p class="home-text text-slick"></p>
                    <p class="home-text text-slick">
                        {
                            HomeData.contactAvailableForHire ? "" : "NOT "
                        }AVAILABLE FOR HIRE
                    </p>
                </div>
            </DetailTable>
        </v>
    </h>
    <h class="footer-foot space-section-6x">
        <v class="w5">
            <span class="home-text text-slick-extra"
                >OMER MERT COSKUN Â© 2025</span
            >
        </v>
        <v class="w1"></v>
        <v class="w6">
            <span class="home-text text-slick-extra dim">
                Licensed under the AGPLv3 with Additional Terms
            </span>
        </v>
    </h>
</footer>
