---
export interface Props {
    id?: string;

    class?: Classname;
}

export type TechStackEntries = Record<string, string[]>;

const { id, class: classname } = Astro.props;

const entries = {
    Languages: [
        "Bash",
        "HTML5",
        "CSS",
        "TypeScript",
        "JavaScript",
        "LaTeX",
        "Python",
        "PHP",
        "CSharp",
        "Visual Basic",
        "Markdown",
    ],
    "Frontend and DevTools": [
        "PostCSS",
        "SASS",
        "React",
        "React Native",
        "Next",
        "Astro",
        "WebRTC",
        "Mapbox",
        "Vite",
        "PhoneGap",
    ],
    "Backend and DevOps": [
        "AWS",
        "Docker",
        "Git",
        "Postgres",
        "Wireguard",
        "FFMPEG",
        "OpenVPN",
        "Nginx",
        "Caddy",
        "Redis",
        "Prisma",
        "Drizzle",
        "Cloudflare",
        "OpenAI APIs",
        "Sentry",
        "Plausible",
    ],
    "Tools and Services": [
        "Figma",
        "arxiv",
        "Adobe PS6",
        "Github Copilot",
        "CSS Design Awards",
        "awwwards",
        "Desmos",
        "WolframAlpha",
    ],
    Opinionated: [
        "Arch Linux",
        "XFCE",
        "ZSH",
        "VSCodium",
        "Bun",
        "Biome",
        "Mullvad VPN",
        "LibreWolf",
        "Signal",
    ],
};

const numberOfEntries = Object.values(entries).reduce(
    (acc, items) => acc + items.length,
    0,
);
---

<section class:list={[classname]} id={id}>
    <w class="center" data-parallax-speed="0.85" data-parallax-opacity-out="0">
        <div class="h2-slick-wrapper">
            <h2 class="text-slick">Tech Stack</h2>
            <sup class="text-slick-extra text-tabular">({numberOfEntries})</sup>
        </div>
    </w>
    {
        Object.entries(entries).map(([title, items]) => (
            <>
                <h class="home-techstack-entry">
                    {/* <v class="w1" /> */}
                    <v class="w2">
                        <span class="text-slick home-techstack-title">
                            * {title}
                        </span>
                    </v>
                    <v class="wauto wmin2 home-techstack">
                        {items.map((item) => (
                            <div class="home-techstack-item">
                                <span class="text-slick">{item}</span>
                            </div>
                        ))}
                    </v>
                </h>
            </>
        ))
    }
</section>
