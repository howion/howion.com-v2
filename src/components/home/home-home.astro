---
import Emblem from "##/public/emblem.svg";
---

<section class="home-section">
    <h>
        <v class="w1">
            <img
                class="home-hero-emblem"
                src={Emblem.src}
                width={Emblem.width}
                height={Emblem.height}
                loading="eager"
                decoding="async"
                fetchpriority="high"
                alt="howion.com emblem"
            />
        </v>
        <v class="w5"></v>
        <v class="w1">
            <div class="home-menu">
                <span class="home-menu-title p text-slick">NAVIGATION</span>
                <div class="home-menu-stack">
                    <a class="home-menu p text-slick" href="#">BLOG</a>
                    <a class="home-menu p text-slick" href="#">RESOURCES</a>
                    <a class="home-menu p text-slick" href="#">SOURCE</a>
                </div>
            </div>
        </v>
        <v class="w1"></v>
        <v class="w1">
            <div class="home-menu">
                <span class="home-menu-title p text-slick">LOCATION</span>
                <div class="home-menu-stack">
                    <p class="text-slick">METU</p>
                    <p class="text-slick">06800 ANKARA</p>
                    <p class="text-slick">TURKIYE</p>
                    <p class="text-slick"></p>
                    <p class="text-slick">UTC +3</p>
                </div>
            </div>
        </v>
        <v class="w1"></v>
        <v class="w2">
            <div class="home-menu">
                <span class="home-menu-title p text-slick">CONTACT</span>
                <div class="home-menu-stack">
                    <p class="text-slick">MERT.COSKUN (a) METU.EDU.TR</p>
                    <p class="text-slick">+90 534 634 0134</p>
                </div>
            </div>
        </v>
    </h>
    <h>
        <v class="wmax home-hero-title" style="margin-top: 150px;">
            <h1 class="slick uppercase text-slick">
                MAPPING <dim>\\</dim> THE
            </h1>
            <h1 class="slick uppercase text-slick">
                <div class="indent">
                    <i class="indent-dot"></i>
                    <i class="indent-dot"></i>
                    <i class="indent-dot"></i>
                    <i class="indent-dot"></i>
                </div>{"INTELLIGIBLE "}<dim>\\</dim>{" TO THE"}
            </h1>
            <h1 class="slick uppercase text-slick">SENSIBLE</h1>
        </v>
    </h>
    <h>
        <v class="w8"></v>
        <v class="w3" style="margin-top: 150px;">
            <p class="text-just">
                A Mathematician and Developer exploring boundaries between
                abstractions and experience.
                <br />
                <br />
                I build systems where logic finds shape and structure meets design.
            </p>
        </v>
    </h>
</section>
