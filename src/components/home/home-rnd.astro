---
import DetailTable from '../detail-table.astro'

interface Props {
    id?: string

    class?: Classname
    isRhs?: boolean
    title: string
    titleExtra?: boolean
    sup?: string

    entries: Record<string, readonly string[]>
}

const { id, class: classname, isRhs, title, titleExtra, sup, entries } = Astro.props
---

<section class:list={[classname]} id={id}>
    <w class:list={[isRhs ? "reverse" : ""]} data-parallax-speed="1">
        <div class="home-h2-slick-wrapper">
            <h2 class={`home-h2 text-slick${titleExtra ? "-extra" : ""}`}>
                {title}
            </h2>
            {
                sup && (
                    <sup
                        class:list={[
                            "text-slick",
                            "text-tabular",
                            isRhs ? "lhs" : "",
                        ]}
                    >
                        {sup}
                    </sup>
                )
            }
        </div>
    </w>
    <h class:list={["space-section-2x", isRhs ? "reverse" : ""]}>
        <v class="w1"></v>
        <v class="w3" data-parallax-speed="1">
            <p class="home-text space-table-top">
                <slot />
            </p>
        </v>
        <v class="w1"></v>
        <v
            class="wauto wmax7"
            data-parallax-speed="1.3"
            style="margin-top:calc((1265px - min(100vh, 1265px))/2)"
        >
            {
                Object.entries(entries).map(([name, items], i) => (
                    <DetailTable
                        class:list={[i !== 0 ? "space-section-2x" : ""]}
                        title={name}
                        titleW={2}
                        contentW={3}
                        slick={true}
                    >
                        <div class="text-stack-slick">
                            {items.map((item) => (
                                <p class="home-text text-slick">{item ? '* ' : ''}{item}</p>
                            ))}
                        </div>
                    </DetailTable>
                ))
            }
        </v>
    </h>
</section>
