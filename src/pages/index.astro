---
import SectionTicker from '#/components/section-ticker.astro'
import Document from '#/layouts/document.astro'
import HomeHome from '#/components/home/home-home.astro'
import HomeRnD from '#/components/home/home-rnd.astro'
import HomeContact from '#/components/home/home-contact.astro'
import Footer from '#/components/footer.astro'
import HomeTechStack from '#/components/home/home-tech-stack.astro'
import HomeFeaturedWork from '#/components/home/home-featured-work.astro'
import { HomeData } from '##/constants/home-data'
---

<Document>
    <solidbox-layout></solidbox-layout>

    <!-- <header>
        <WaypointHeader />
    </header> -->

    <!-- <div class="continuum-top"></div> -->
    <div class="continuum-top"></div>

    <main>
        <!-- HOME START -->
        <HomeHome />
        <!-- HOME END -->

        <!-- ABOUT START -->
        <SectionTicker text="ABOUT ME" class="space-section-2x" />
        <!-- ABOUT END -->

        <!-- ABOUT / Research START -->
        <HomeRnD
            class="space-section-6x"
            title="Research"
            sup="++"
            entries={{
                Current: HomeData.researchCurrent,
                Prior: HomeData.researchPrior,
            }}
            >{
                "From the complex to the simple I seek structures that reveal more than they resolve."
            }</HomeRnD
        >
        <!-- ABOUT / Research END -->

        <!-- ABOUT / Development START -->
        <HomeRnD
            class="space-section-3x"
            title="Development"
            titleExtra={true}
            sup="&&"
            isRhs={true}
            entries={HomeData.developmentEntries}
            >{
                "For me the development is not just an " +
                    "implementation but rather an articulation. It is a way to make abstract ideas move " +
                    "respond and sometimes even resonate."
            }</HomeRnD
        >
        <!-- ABOUT / Development END -->

        <!-- ABOUT / TECH STACK START -->
        <HomeTechStack class="space-section-3x" id="tech-stack" data-d="dd" />
        <!-- ABOUT / TECH STACK END -->

        <!-- FEATURED WORK START -->
        <SectionTicker text="FEATURED WORK" class="space-section-6x" />
        <HomeFeaturedWork class="space-section-5x" />
        <!-- FEATURED WORK END -->

        <!-- CONTACT START -->
        <!-- <waypoint name="contact"></waypoint> -->
        <SectionTicker text="CONTACT" class="space-section-3x" />
        <HomeContact class="space-section-4x" />
        <!-- CONTACT END -->
    </main>

    <Footer class="space-section-6x" />

    <div class="continuum-bot"></div>
    <!-- <div class="continuum-bot2"></div> -->
</Document>
